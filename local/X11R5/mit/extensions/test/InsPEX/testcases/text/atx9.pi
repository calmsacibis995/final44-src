## atx9.pi -  
## Test individual annotation text attributes :
##      text font: 
##      text precision: 
##      text colour: 
source macro.pi

tbegintest("atx9","annotation text font and precision");

# initialize: test position and offset, and a RGB colour
txpos23 = I_Ppoint3( 0.3,0.3,0.0);
txpos24 = I_Ppoint3( 0.3,0.4,0.0);
txpos25 = I_Ppoint3( 0.3,0.5,0.0);
pm23 = I_Ppoint_list3(1,&txpos23);
pm24 = I_Ppoint_list3(1,&txpos24);
pm25 = I_Ppoint_list3(1,&txpos25);
offset = I_Pvec3( 0.05,0.05,0.0);
gc = I_Pgcolr(PMODEL_RGB,0.0,0.0,1.0);
text = malloc(1024);

# setup: open phigs and a workstation, open and post a structure
i_open_phigs(NULL,PDEF_MEM_SIZE); 
i_open_x_ws(1,&xdisplay,&xwindow,0,0,200,200);
popen_struct(1);

# testing text font and precisions
# test with other non-default text attributes
upvec = I_Pvec(1.0,2.0);
txalign = I_Ptext_align(PHOR_CTR,PVERT_HALF);
# draw with lead line
pset_marker_type(PMARKER_CROSS);
pset_anno_style(PANNO_STYLE_LEAD_LINE);
pset_text_colr(&gc);
pset_anno_char_ht(0.025);
pset_char_space(1.0);
pset_char_expan(1.5);
pset_anno_char_up_vec(&upvec);
pset_anno_path(PPATH_LEFT);
pset_anno_align(&txalign);
foreach @font @prec @pm @txpos @text(
	1; PPREC_STRING; &pm23; &txpos23; "1,STRING";
	1; PPREC_CHAR;   &pm24; &txpos24; "1,CHAR";
	1; PPREC_STROKE; &pm25; &txpos25; "1,STROKE";
)
	pset_text_font(@font);
	pset_text_prec(@prec);
        panno_text_rel3(@txpos,&offset,@text);
	ppolymarker3(@pm);
end
ppost_struct(1,1,1.0);
# verify image
i_check_image("atx9",xdisplay,xwindow,0,0,199,199,
	"various annotation text fonts and precisions");
im_def_grid();
i_pause();

tendtest();
