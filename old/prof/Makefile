# If you don't want to plot, take out the -Dplot and the loader
# reference to plot.a
CFLAGS=	-O -Dplot
LIBC=	/lib/libc.a
SRCS=	prof.c
OBJS=
MAN=	prof.0

all: prof

prof: ${LIBC}
	${CC} -o $@ ${CFLAGS} $@.c -lplot

clean:
	rm -f ${OBJS} core prof

cleandir: clean
	rm -f ${MAN} tags .depend

depend: ${SRCS}
	mkdep ${CFLAGS} ${SRCS}

install: ${MAN}
	install -s -o bin -g bin -m 755 prof ${DESTDIR}/usr/bin
	install -c -o bin -g bin -m 444 ${MAN} ${DESTDIR}/usr/man/cat1

lint: ${SRCS}
	lint ${CFLAGS} ${SRCS}

tags: ${SRCS}
	ctags ${SRCS}
